.skin--deep-sea
  color #fff
  background rgb(95,103,118)
  background linear-gradient(90deg, rgba(95,103,118,1) 0%, rgba(62,68,83,1) 100%)
  .el-button--text
    color #fff
  .container
    .aside
      .menu
        border-right 1px solid #282f60
        color #e2ebff54
        background: rgb(29,34,77);
        background: linear-gradient(0deg, rgba(29,34,77,1) 0%, rgba(52,61,119,1) 100%);
        .menu-toggle
          background transparent
          i
            color #fff
        i
          color #ffffff94
        &.el-menu-vertical
          .el-menu-item
          .el-submenu__title
          .el-submenu__title .el-submenu__icon-arrow
            color #ffffff94
          .el-menu-item-group__title
            color #ffffff59
          .el-menu-item:not(.menu-toggle):focus
          .el-menu-item:not(.menu-toggle):hover
          .el-submenu__title:hover
          .el-menu--inline
            background-color transparent
          .el-menu-item:not(.menu-toggle).is-active
            color #fff
            & i
              color #fff
          & > .el-menu-item:not(.menu-toggle)
          .el-submenu__title
            height 56px
            line-height 56px
          .el-menu-item:not(.menu-toggle):hover
          .el-menu-item:not(.menu-toggle).is-active
            background #98989817
          .el-menu-item:not(.menu-toggle).is-active::before
            content ''
            position absolute
            left 0
            top 0
            bottom 0
            width 3px
            background #6672c3
    .section
      background: rgb(54,64,115);
      background: linear-gradient(180deg, rgba(54,64,115,1) 0%, rgba(26,31,73,1) 100%);
