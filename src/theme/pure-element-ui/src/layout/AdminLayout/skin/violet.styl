.skin--violet
  background #f9f9f9
  .container
    .aside
      .menu
        border none
        background #362259
        color #e2ebff54
        .menu-toggle
          background #573493
          i
            color #fff
        i
          color #ffffff94
        &.el-menu-vertical
          .el-menu-item
          .el-submenu__title
          .el-submenu__title .el-submenu__icon-arrow
            color #ffffff94
          .el-menu-item-group__title
            color #9887b769
          .el-menu-item:not(.menu-toggle):focus
          .el-menu-item:not(.menu-toggle):hover
          .el-submenu__title:hover
          .el-menu--inline
            background-color transparent
          .el-menu-item:not(.menu-toggle).is-active
            color #fff
            & i
              color #fff
          & > .el-menu-item:not(.menu-toggle)
          .el-submenu__title
            height 56px
            line-height 56px
          .el-menu-item:not(.menu-toggle):hover
          .el-menu-item:not(.menu-toggle).is-active
            background rgba(176, 149, 220, 0.13)
          .el-menu-item:not(.menu-toggle).is-active::before
            content ''
            position absolute
            left 0
            top 0
            bottom 0
            width 3px
            background #fff
    .header
      background #fff
